extends ../layout/index

block contenido
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center.text-darkCyan Bienes
            span.font-normal.text-black Raíces
        h2.text-center.text-2xl.font-extrabold= pagina

        div(class="bg-white shadow py-8 px-4 rounded-lg max-w-md mx-auto")
            p(class= !error ? 'bg-green-500 flex items-center py-2 px-5 rounded-lg w-full font-bold text-center text-white' : 'bg-red-500 flex items-center py-2 px-5 rounded-lg w-full font-bold text-center text-white')
                if !error
                    svg(class="w-6 h-6 mr-2", xmlns="http://localhost:3001/img/done.png", fill="none", viewBox="0 0 24 24", stroke="currentColor")
                        path(stroke-linecap="round", stroke-linejoin="round", stroke-width="2", d="M9 12l2 2 4-4m0 5a9 9 0 110-18 9 9 0 010 18z")
                    | #{mensaje}
                    div 
                        a(href="/auth/login" class="text-center font-bold text-sm text-slate-600 uppercase mt-10 block") ¡Ya puedes iniciar sesión!
                
                else
                    svg(class="w-6 h-6 mr-2", xmlns="http://localhost:3001/img/error.png", fill="none", viewBox="0 0 24 24", stroke="currentColor")
                        path(stroke-linecap="round", stroke-linejoin="round", stroke-width="2", d="M6 18L18 6M6 6l12 12")
                    | #{mensaje}
                    div
                        a(href="/auth/registro" class="text-center font-bold text-sm text-slate-600 uppercase mt-10 block") Intenta de nuevo.  
                

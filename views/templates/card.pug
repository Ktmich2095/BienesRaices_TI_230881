div(class="bg-white shadow rounded-lg")
    div(class="p-3 space-y-4 flex items-center")
        img(class="rounded-full w-14 h-14" src=`/uploads/${propiedad.usuario.fotoPerfil}` alt=`Foto de perfil del usuario ${propiedad.usuario.alias}`)
        h3(class="text-xl ml-3 self-start font-normal")= propiedad.usuario.alias
    img(class="object-cover h-72 w-full p-3 rounded-sm"  src=`/uploads/${propiedad.imagen}` alt=`imagen de la propiedad ${propiedad.titulo}`)
    div(class="p-5 space-y-5")
        h1(class="text-xl font-bold")= propiedad.titulo
        p(class="text-sm text-gray-600") Habitaciones:  
                                span(class="text-gray-800 font-bold")= propiedad.habitaciones
        p(class="text-sm text-gray-600") WC:  
                                span(class="text-gray-800 font-bold")= propiedad.wc
        p(class="text-sm text-gray-600") Precio:  
                                span(class="text-gray-800 font-bold")= propiedad.precio.nombre 
        a(href=`/propiedad/${propiedad.id}` class="bg-darkCyan w-full text-center block font-bold text-white p-2 uppercase rounded") Ver Propiedad          
